<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="top.rinoux.wuw.controller.LoginController">
    <children>
        <HBox alignment="CENTER" prefWidth="200.0">
            <children>
                <ImageView fx:id="avatar" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                    <viewport>
                        <Rectangle2D />
                    </viewport>
                </ImageView>
            </children>
        </HBox>
        <TextField fx:id="hostUrlValue" promptText="地址" text="http://cloud.finedevelop.com:2015" />
        <TextField fx:id="usernameValue" promptText="用户名" />
        <PasswordField fx:id="passwordValue" promptText="密码" />
        <HBox prefWidth="200.0" spacing="20.0">
            <children>
                <ComboBox fx:id="gitType" prefHeight="27.0" prefWidth="113.0" promptText="bitbucket">
               <HBox.margin>
                  <Insets />
               </HBox.margin></ComboBox>
                <CheckBox fx:id="autoLogin" mnemonicParsing="false" prefHeight="27.0" prefWidth="90.0" selected="true" text="自动登录">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin></CheckBox>
            </children>
        </HBox>
        <HBox nodeOrientation="RIGHT_TO_LEFT" prefWidth="200.0" spacing="20.0">
            <children>
                <Button fx:id="loginBtn" defaultButton="true" mnemonicParsing="false" prefHeight="27.0" prefWidth="240.0" text="登录">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Button>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>
      <Label fx:id="message" prefHeight="17.0" prefWidth="239.0" />
    </children>
    <padding>
        <Insets bottom="30.0" left="80.0" right="80.0" top="50.0" />
    </padding>
</VBox>
